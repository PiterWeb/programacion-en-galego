---
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";
import bailu from "../assets/bailu.png";
const title = "Non atopado";
const description = "O sentimos pero a páxina web que intenta consultar non existe.";
---

<Layout title={title} description={description}>
  <div class="flex flex-col items-center gap-4 mt-18">
    <Picture
      src={bailu}
      alt="Chibi Bailu from Honkai Star Rail (ctto)"
      loading="eager"
      class="aspect-square"
      densities={[1.5, 2]}
      formats={["webp"]}
      width={360}
      height={360}
    />
    <p class="dark:text-white font-medium text-zinc-900 text-center">
      Esta páxina non existe. Pode que se movese, borrase ou que nunca existira.
    </p>
  </div>
</Layout>
